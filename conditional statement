    <!-- <script>

        let a = parseInt(prompt("Enter First Number"));
        let b = parseInt(prompt("Enter Second Number"));
        let c = parseInt(prompt("Enter Third Number"));
        let d = parseInt(prompt("Enter Fourth Number"));

        if (a > b) {
            if (a > c) {
                if (a > d) {
                    alert(a + " is Max");
                }
                else {
                    alert(d + " is Max");
                }
            }
            else {
                if (c > d) {
                    alert(c + " is Max");
                }
                else {
                    alert(d + " is Max");
                }
            }
        }
        else {
            if (b > c) {
                if (b > d) {
                    alert(b + " is Max");
                }
                else {
                    alert(d + " is Max");
                }
            }
            else {
                if (c > d) {
                    alert(c + " is Max");
                }
                else {
                    alert(d + " is Max");
                }
            }
        }
    </script> -->


    <!-- =============task-10========= -->


    <!-- <script>
        let a = parseInt(prompt("Enter the first number"));
        let b = parseInt(prompt("Enter the second number"));
        let choice = prompt("Select an operation (+, -, *, /)");

        let ans;

        switch (choice) {
            case '+': ans = a + b;
                break;
            case '-': ans = a - b;
                break;
            case '*': ans = a * b;
                break;
            case '/': ans = a / b;
                break;
            default: ans = "Invalid operation";
        }
        alert("Answer = " + ans);
    </script> -->



    <!-- ===============task-11============= -->
    <!-- <script>
        let a = parseInt(prompt("Enter the first number"));
        let b = parseInt(prompt("Enter the second number"));
        let choice = prompt("Select an operation (+, -, *, /)");

        let ans;

        if (choice === "+") {
            ans = a + b;
        }
        else if (choice === "-") {
            ans = a - b;
        }
        else if (choice === "*") {
            ans = a * b;
        }
        else if (choice === "/") {
            ans = a / b;
        }
        else {
            ans = "Invalid Input";
        }

         console.log("Answer = " +ans);
    </script> -->



